<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:layout_alignParentLeft="true"
    android:background="@drawable/grad1">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="200dp"   />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250dp"      >


    <TextView
        android:id="@+id/currencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:elevation="24dp"
        android:text="Loading..."
        android:textColor="#fff"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/currencyText1"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:layout_below="@id/currencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/currencyText2"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:layout_below="@+id/currencyText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/currencyText3"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:layout_below="@id/currencyText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/currencyText4"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:layout_below="@id/currencyText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   </LinearLayout>









</RelativeLayout>
